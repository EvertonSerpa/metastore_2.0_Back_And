// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(uuid())
  name                  String
  profile_picture       String?
  nick_name             String   @unique
  status                Boolean? @default(true)
  seller                Boolean? @default(false)
  description           String?
  email                 String   @unique
  role                  String   @default("USER")
  banner                String?
  average_qualification Int?
  counter_views_store   Int?     @default(0)
  password              String
  updateAt              DateTime @updatedAt
  createAt              DateTime @default(now())

  Tephone       Telephone[]
  Deposit_Money Deposit_Money[]
}

model Telephone {
  id           String   @id @default(uuid())
  phone_number String
  country_code String
  region_code  String
  updateAt     DateTime @updatedAt
  createAt     DateTime @default(now())


  telephoneRef User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String?
}

model Deposit_Money {
  id       String   @id @default(uuid())
  value    Int
  updateAt DateTime @updatedAt
  createAt DateTime @default(now())

  deposit_moneyRef User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
}

model Products {
  id                    String   @id @default(uuid())
  average_qualification Int?
  name_product          String
  price                 Int
  description           String
  specs                 String?
  details               String?
  color                 String?
  tags_product          String?
  video                 String?
  main_picture          String?
  gallery               String?
  image_3d              String?
  status                String?
  counter_views_product Int?     @default(0)
  collection            String?  @db.VarChar
  stock                 Int?     @default(0)
  offer                 Int?     @default(0)
  highlight_level       Int?     @default(0)
  featured              Boolean  @default(true)
  updateAt              DateTime @updatedAt
  createAt              DateTime @default(now())
}
